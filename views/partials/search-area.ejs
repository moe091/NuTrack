
        			<div class="search-area">
                <h2><%= message %></h2>
								<% if (typeof nutList != "undefined") { %>
								
									<table class="table">
										<thead class="thead-inverse">
											<tr>
												<th>Product</th>
												<% for (var n in nutList[0].nutrients) { %>
													<th><%= nutList[0].nutrients[n].name %></th>
												<% } %>
											</tr>
										</thead>
										
										<tbody>
										
											<% for (var n in nutList) { %>
												<tr>
													<td><a href="#" class="food-item-link" id="item-link-<%=n%>"><%= (Number(n)+1) + " - " + nutList[n].name.substr(0, 40) %></a></td>
													<% for (var nut in nutList[n].nutrients) { %>
														<td><%= nutList[n].nutrients[nut].value + nutList[n].nutrients[nut].unit %> </td>
													<% } %> <!-- end for (nutList.nutrients) -->
													<td><input type="checkbox" class="search-checkbox" id="search-check-<%= n %>"></td>
												</tr>
											<% } %> <!-- end for (nutList) -->
											
										</tbody>
									</table>

								<% } %> <!-- end if (list) -->


							</div><!-- search-area -->
        		
